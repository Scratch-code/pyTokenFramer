
from PIL import Image, ImageFilter, ImageDraw
import sys
import os.path

#Loop
for i in range(1, len(sys.argv)):
        # Attempt to open an image file
        filepath = sys.argv[i]
        image = Image.open(filepath)

    
# specify top image to paste

topImage = Image.open('/home/Documents/code/python/img/frame.webp')
#Paste
image.paste(topImage)
   # Split our original filename into name and extension
(name, extension) = os.path.splitext(filepath)
    
    # Save with "_changed" added to the filename
image.save(name + '_changed' + extension)
    
    # Save the image as a JPG
image.save(name + '.jpg')
